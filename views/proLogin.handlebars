  <h2>Pro Signup</h2>

        <form class="form signup-form">
            <div class="form-group">
                <label for="name-signup">name:</label>
                <input class="form-input" type="text" id="name-signup" />
            </div>
            <div class="form-group">
                <label for="email-signup">email:</label>
                <input class="form-input" type="text" id="email-signup" />
            </div>
            <div class="form-group">
                <label for="phone-signup">phone:</label>
                <input class="form-input" type="text" id="phone-signup" />
            </div>
            <div class="form-group">
                <label for="focus">Skills:</label>
                <label>
                    <input type="checkbox" name="service" value="carpentry">
                    Carpentry
                </label><br>
                <label>
                    <input type="checkbox" name="service" value="electrical">
                    Electrical
                </label><br>
                <label>
                    <input type="checkbox" name="service" value="plumbing">
                    Plumbing
                </label><br>
                <label>
                    <input type="checkbox" name="service" value="hvac">
                    HVAC
                </label><br>
            </div>
            <div class="form-group">
                <label for="password-signup">password:</label>
                <input class="form-input" type="password" id="password-signup" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">signup</button>
            </div>
        </form>